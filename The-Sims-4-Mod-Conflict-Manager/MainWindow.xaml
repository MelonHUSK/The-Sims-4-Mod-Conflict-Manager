<Window x:Class="The_Sims_4_Mod_Conflict_Manager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="The Sims 4 - Mod Conflict Manager" 
        Height="600" 
        Width="1000"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <Border Grid.Row="0" 
                Background="#2C3E50" 
                Padding="15" 
                CornerRadius="5"
                Margin="0,0,0,10">
            <StackPanel>
                <TextBlock Text="The Sims 4 Mod Conflict Manager" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           Foreground="White"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="Detect and manage conflicting mods with your current game version" 
                           FontSize="12" 
                           Foreground="#BDC3C7"
                           HorizontalAlignment="Center"
                           Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Folder Selection Section -->
        <Border Grid.Row="1" 
                BorderBrush="#BDC3C7" 
                BorderThickness="1" 
                Padding="10"
                CornerRadius="5"
                Margin="0,0,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" 
                           Text="Mods Folder:" 
                           VerticalAlignment="Center"
                           FontWeight="SemiBold"
                           Margin="0,0,10,0"/>

                <TextBox Grid.Column="1" 
                         x:Name="ModsFolderTextBox"
                         VerticalAlignment="Center"
                         Padding="5"
                         IsReadOnly="True"
                         Background="#ECF0F1"
                         Text="No folder selected..."/>

                <Button Grid.Column="2" 
                        x:Name="BrowseFolderButton"
                        Content="Browse..."
                        Width="100"
                        Height="30"
                        Margin="10,0,10,0"
                        Click="BrowseFolderButton_Click"/>

                <Button Grid.Column="3" 
                        x:Name="ScanModsButton"
                        Content="Scan Mods"
                        Width="100"
                        Height="30"
                        Background="#27AE60"
                        Foreground="White"
                        FontWeight="SemiBold"
                        Click="ScanModsButton_Click"
                        IsEnabled="False"/>
            </Grid>
        </Border>

        <!-- Main Content Section -->
        <Border Grid.Row="2" 
                BorderBrush="#BDC3C7" 
                BorderThickness="1"
                CornerRadius="5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Statistics Bar -->
                <Border Grid.Row="0" 
                        Background="#ECF0F1" 
                        Padding="10"
                        BorderBrush="#BDC3C7"
                        BorderThickness="0,0,0,1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                            <TextBlock Text="Total Mods" 
                                       FontSize="11" 
                                       Foreground="#7F8C8D"
                                       HorizontalAlignment="Center"/>
                            <TextBlock x:Name="TotalModsText" 
                                       Text="0" 
                                       FontSize="20" 
                                       FontWeight="Bold"
                                       HorizontalAlignment="Center"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                            <TextBlock Text="Compatible" 
                                       FontSize="11" 
                                       Foreground="#7F8C8D"
                                       HorizontalAlignment="Center"/>
                            <TextBlock x:Name="CompatibleModsText" 
                                       Text="0" 
                                       FontSize="20" 
                                       FontWeight="Bold"
                                       Foreground="#27AE60"
                                       HorizontalAlignment="Center"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                            <TextBlock Text="Conflicts" 
                                       FontSize="11" 
                                       Foreground="#7F8C8D"
                                       HorizontalAlignment="Center"/>
                            <TextBlock x:Name="ConflictsText" 
                                       Text="0" 
                                       FontSize="20" 
                                       FontWeight="Bold"
                                       Foreground="#E74C3C"
                                       HorizontalAlignment="Center"/>
                        </StackPanel>

                        <StackPanel Grid.Column="3" HorizontalAlignment="Center">
                            <TextBlock Text="Warnings" 
                                       FontSize="11" 
                                       Foreground="#7F8C8D"
                                       HorizontalAlignment="Center"/>
                            <TextBlock x:Name="WarningsText" 
                                       Text="0" 
                                       FontSize="20" 
                                       FontWeight="Bold"
                                       Foreground="#F39C12"
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Mods DataGrid -->
                <DataGrid Grid.Row="1" 
                          x:Name="ModsDataGrid"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          IsReadOnly="True"
                          SelectionMode="Single"
                          GridLinesVisibility="Horizontal"
                          HeadersVisibility="Column"
                          AlternatingRowBackground="#F8F9FA"
                          RowHeight="30"
                          Margin="0">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Status" 
                                            Binding="{Binding Status}" 
                                            Width="80"/>
                        <DataGridTextColumn Header="Mod Name" 
                                            Binding="{Binding ModName}" 
                                            Width="*"/>
                        <DataGridTextColumn Header="Matched To" 
                                            Binding="{Binding MatchedModName}" 
                                            Width="*"/>
                        <DataGridTextColumn Header="File Size" 
                                            Binding="{Binding FileSize}" 
                                            Width="100"/>
                        <DataGridTextColumn Header="Issue" 
                                            Binding="{Binding Issue}" 
                                            Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>

        <!-- Status Bar -->
        <Border Grid.Row="3" 
                Background="#ECF0F1" 
                Padding="10"
                CornerRadius="5"
                Margin="0,10,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0"
                           x:Name="StatusText" 
                           Text="Ready. Select your Mods folder to begin scanning."
                           VerticalAlignment="Center"
                           Foreground="#7F8C8D"
                           Margin="0,0,0,5"/>

                <ProgressBar Grid.Row="1"
                             x:Name="ScanProgressBar" 
                             Height="20"
                             Visibility="Collapsed"
                             HorizontalAlignment="Stretch"/>
            </Grid>
        </Border>
    </Grid>
</Window>